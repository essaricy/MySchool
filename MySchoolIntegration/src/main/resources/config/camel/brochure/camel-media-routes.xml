<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:camel="http://camel.apache.org/schema/spring"
    xsi:schemaLocation=" http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd
        http://camel.apache.org/schema/spring
        http://camel.apache.org/schema/spring/camel-spring.xsd">

    <context:component-scan base-package="com.myschool.integration" />

    <routeContext id="Brochure_Media_Routes" xmlns="http://camel.apache.org/schema/spring">
        <route id="MS_BROCHURE">
            <camel:description>Posts brochures and description files to the media server</camel:description>
            <camel:from ref="IntegrationServer-Out-Brochure" />
            <camel:setHeader headerName="MEDIA_TYPE" >
                <camel:simple>BROCHURE</camel:simple>
            </camel:setHeader>
            <camel:setHeader headerName="MEDIA_FILE" >
                <camel:simple>/media/brochure/${file:name}</camel:simple>
            </camel:setHeader>
            <camel:to uri="bean:MediaServerFTPComponent?method=send" />
        </route>
    </routeContext>

</beans>
