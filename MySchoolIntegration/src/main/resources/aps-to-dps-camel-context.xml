<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:camel="http://camel.apache.org/schema/spring"
    xsi:schemaLocation=" http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd
        http://camel.apache.org/schema/spring
        http://camel.apache.org/schema/spring/camel-spring.xsd">

        <context:component-scan base-package="com.myschool" />
        <!-- 
		  <camel:packageScan>
		    <camel:package>com.myschool</camel:package>
		    <camel:excludes>**.*Excluded*</camel:excludes>
		    <camel:includes>**.*</camel:includes>
		  </camel:packageScan>
         -->

    <camelContext xmlns="http://camel.apache.org/schema/spring">

		<errorHandler id="ftpFailErrorHandler" type="DefaultErrorHandler">
		    <redeliveryPolicy maximumRedeliveries="3" redeliveryDelay="1000" backOffMultiplier="2"
                    maximumRedeliveryDelay="30000" retryAttemptedLogLevel="WARN" logStackTrace="true" logRetryStackTrace="true" 
                    logRetryAttempted="true" />
		</errorHandler>

        <endpoint id="myFTPEndpoint" 
            uri="ftp://demo@192.168.0.101/appserver-local1/transfers/outbound/exim/import?password=AeZ02q8G2p&amp;move=history/${file:name}_${date:now:yyyyMMddHHmmssSSS}&amp;moveFailed=error/${file:name}_${date:now:yyyyMMddHHmmssSSS}"
        />
        <endpoint id="toEndpoint" uri="file://D:\myschool\demo\dpsserver\inbound\exim\import" />

        <redeliveryPolicyProfile id="ftpFailErrorPolicy" maximumRedeliveries="3" redeliveryDelay="1000" backOffMultiplier="2"
                    maximumRedeliveryDelay="30000" retryAttemptedLogLevel="WARN" logStackTrace="true" logRetryStackTrace="true" 
                    logRetryAttempted="true" />

        <route errorHandlerRef="ftpFailErrorHandler">
            <camel:description>Receive files from app server</camel:description>
            <from ref="myFTPEndpoint" />
            <onException>
                <!-- refer to common redelivery policy -->
                <exception>org.apache.camel.component.file.GenericFileOperationFailedException</exception>
                <!-- but we can override the profile and log retry attempts at WARN level -->
                <redeliveryPolicy logRetryAttempted="true"  retryAttemptedLogLevel="WARN"/>
            </onException>
            <log message="File received"/>
            <to ref="toEndpoint" />
        </route>
    </camelContext>
</beans>
