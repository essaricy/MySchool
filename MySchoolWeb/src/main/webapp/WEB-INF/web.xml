<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>MySchoolWeb</display-name>

    <filter>
        <filter-name>TimerFilter</filter-name>
        <filter-class>com.myschool.web.common.filter.TimerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.myschool.web.common.filter.AuthenticationFilter</filter-class>
    </filter>

    <filter-mapping> 
        <filter-name>TimerFilter</filter-name>
        <url-pattern>/*</url-pattern> 
    </filter-mapping>
    <filter-mapping> 
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern> 
    </filter-mapping>

    <servlet>
        <servlet-name>myschool</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>myschool</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>jcaptcha</servlet-name>
        <servlet-class>com.octo.captcha.module.servlet.image.SimpleImageCaptchaServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>jcaptcha</servlet-name>
        <url-pattern>/jcaptcha</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>
  
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            /WEB-INF/MySchoolBase.xml
            /WEB-INF/MySchoolInfrastructure.xml
            /WEB-INF/MySchoolService.xml
        </param-value>
    </context-param>

    <welcome-file-list>
        <welcome-file>/launchLogin.htm</welcome-file>
    </welcome-file-list>

</web-app>
