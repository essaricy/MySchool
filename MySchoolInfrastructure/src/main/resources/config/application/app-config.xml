<?xml version="1.0" encoding="UTF-8"?>
<app-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="app-config.xsd">
    <agents>
        <!--
            <agent id="config_id" class="fully qualified class name" config="config file name to initiate with" />
            config - This file will be determined by looking into the FileSystem.properties file It must point to n appropriate property in the file.
         -->
        <agent id="filesystem" class="com.myschool.infra.filesystem.agent.LocalFileSystemAgent" config="${config.filesystem.xml.file}" />
        <agent id="webserver" class="com.myschool.infra.webserver.agent.WebServerAgent" />
        <agent id="database" class="com.myschool.infra.database.agent.DatabaseAgent" config="${config.database.file}" />
        <agent id="middleware" class="com.myschool.infra.middleware.agent.ActiveMQMiddlewareAgent" config="${config.middleware.server.file}" />
        <agent id="email" class="com.myschool.infra.email.agent.EmailServerAgent" config="${config.email.file}" />
        <!-- Use OXO Configuration file as the configuration is same for OJO and OXO -->
        <agent id="ojo" class="com.myschool.infra.ojo.agent.XStreamJsonAgent" config="${config.oxo.file}" />
        <agent id="oxo" class="com.myschool.infra.oxo.agent.XStreamAgent" config="${config.oxo.file}" />
        <agent id="in_cache" class="com.myschool.infra.cache.agent.JvmInMemoryCacheAgent" />
        <agent id="out_cache" class="com.myschool.infra.cache.agent.JcsCacheAgent" config="${config.cache.file}"/>
        <agent id="report" class="com.myschool.infra.report.agent.jasper.JasperDynamicReportAgent" />
        <!-- <agent id="graphs" class="com.myschool.infra.graph.agent.CewolfGraphAgent" /> -->
        <agent id="captcha" class="com.myschool.infra.captcha.agent.JCaptchaAgent" />
        <agent id="image_scaling" class="com.myschool.infra.image.agent.ThumbnailatorImageScalingAgent" config="${config.image.scaling.file}" />
        <agent id="scheduler" class="com.myschool.infra.scheduler.agent.QuartzSchedulerAgent" config="${config.scheduler.file}" />
        <agent id="sms" class="com.myschool.infra.sms.agent.SmsIntegraServerAgent" config="${config.sms.file}" />
    </agents>
    <features>
        <feature id="Child Centric Education" value="features/feature1.jpg"
            description="To each according to his needs and to each according to his capacity is our motto for education. Therefore, all activities are designed keeping in mind the individual learning needs and capabilities of every child." />
        <feature id="Concept Based Learning" value="features/feature2.jpg"
            description="The purpose of learning is to seek knowledge and not just accumulating information. Therefore we focus on helping the child get conceptual clarity in every subject using various teaching aids which are lot more fun than just completing the prescribed texts." />
        <feature id="Co-Curricular Activities" value="features/feature3.jpg"
            description="The personality of a person is enhanced by artistic pursuits. We plan to introduce the children to the finesse of life through performing arts like dance, music and dramatics and fine arts like drawing and painting." />
        <feature id="Transportation Facility" value="features/feature4.jpg" description="Transportation Facility." />
        <feature id="Qualified Teaching Staff" value="features/feature5.jpg" description="Motivated, highly qualified trained Teaching staff." />
        <feature id="Well Equipped Library" value="features/feature6.jpg" description="Well Equipped Library" />
    </features>
    <myschool id="@MYSCHOOL.NAME@" base-dir="@MYSCHOOL.DIR@" web-url="http://localhost:8080/@MYSCHOOL.NAME@" />
</app-config>
