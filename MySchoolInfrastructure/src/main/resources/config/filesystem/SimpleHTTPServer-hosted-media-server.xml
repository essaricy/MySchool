<?xml version="1.0" encoding="UTF-8"?>
<!--
    @MYSCHOOL.NAME@ - replaces with myschool name, replaced only during build
    @BASE_URL@ - Represents base url, defined in base-url
    @PARENT_URL@ - Represents parent url
    @RESOURCE_NAME@ - Resource Name
 -->

<media-server base-url="http://192.168.0.12:12345"
    passport="@PARENT_URL@/PASSPORT/@RESOURCE_NAME@" thumbnail="@PARENT_URL@/THUMBNAIL/@RESOURCE_NAME@">

    <!-- File resources -->
    <resource id="brochures" url="@BASE_URL@/brochures">
        <pattern excludes="..,passport/,thumbnail/" />
    </resource>

    <!-- Feature images -->
    <resource id="features" url="@BASE_URL@/features">
        <pattern excludes="..,passport/,thumbnail/,back,Name,Size,Last modified,Web Server Ultimate" />
    </resource>

    <!-- Organization Images -->
    <resource url="@BASE_URL@/organization">
        <static-resource id="logo" name="LOGO.png" />
        <static-resource id="no_image" name="NO_IMAGE.jpg" />
        <static-resource id="director" name="director.jpg" />
        <static-resource id="organization" name="organization.jpg" />
    </resource>

    <!-- Gallery Resources -->
    <resource id="gallery" url="@BASE_URL@/gallery">
        <pattern excludes="..,passport/,thumbnail/" />
    </resource>

    <!-- Employee profile images -->
    <resource id="employee_portal" url="@BASE_URL@/employee/portal">
        <pattern excludes="back,Name,Size,Last modified,Web Server Ultimate" />
    </resource>
    <resource id="employee_registered" url="@BASE_URL@/employee/registered">
        <pattern excludes="..,passport/,thumbnail/" />
    </resource>

    <!-- Student profile images -->
    <resource id="student_portal" url="@BASE_URL@/student/portal">
        <pattern excludes="..,passport/,thumbnail/" />
    </resource>
    <resource id="student_registered" url="@BASE_URL@/student/registered">
        <pattern excludes="..,passport/,thumbnail/" />
    </resource>

    <!-- Greeting images -->
    <resource id="greetings" url="@BASE_URL@/greetings">
        <pattern excludes="..,passport/,thumbnail/" />
    </resource>

    <!-- Product images -->
    <resource id="product" url="@BASE_URL@/product">
        <pattern excludes="..,passport/,thumbnail/" />
    </resource>
</media-server>
